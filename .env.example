# Okta Configuration
OKTA_DOMAIN=yourorg.okta.com
OKTA_API_TOKEN=your_okta_api_token_here
OKTA_WEBHOOK_SECRET=your_webhook_secret_here

# Braintrust Organizations
# Production
BT_PROD_API_KEY=your_braintrust_production_api_key
BT_PROD_URL=https://api.braintrust.dev

# Staging  
BT_STAGING_API_KEY=your_braintrust_staging_api_key
BT_STAGING_URL=https://api.braintrust.dev

# Development (optional)
BT_DEV_API_KEY=your_braintrust_dev_api_key
BT_DEV_URL=https://api.braintrust.dev

# Sync Configuration
SYNC_DRY_RUN=false
SYNC_BATCH_SIZE=50
SYNC_LOG_LEVEL=INFO
SYNC_LOG_FORMAT=json

# Webhook Server
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
WEBHOOK_WORKERS=4

# Queue Configuration (Only memory backend is implemented)
QUEUE_BACKEND=memory  # Only memory backend is currently available

# Security
SECRET_KEY=your_secret_key_for_signing
WEBHOOK_SIGNATURE_VERIFY=true

# Monitoring & Observability  
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Development/Debug
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false